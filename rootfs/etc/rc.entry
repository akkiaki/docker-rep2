#!/bin/sh

yes no | cp -Ri /var/www/.bak/* /ext/

datadir=/ext/ic/mysql
if [[ ! -d $datadir ]]; then
    mysql_install_db --user=mysql --ldata=$datadir
fi

mysqld --user mysql --datadir=$datadir &
while ! mysqladmin -s ping; do
    sleep 1
done
mysqladmin create ic2
php7 /var/www/scripts/ic2.php setup

php-fpm7
nginx

rm -f /tmp/2chproxy.pid
exec /usr/local/bin/2chproxy.pl
